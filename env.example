# Database Configuration
# For development: sqlite:///./ionologybot.db
# For production: postgresql://user:password@host:port/dbname (Railway will provide this)
DATABASE_URL=sqlite:///./ionologybot.db

# Qdrant Configuration
# For development: http://localhost:6333
# For production: https://your-cluster-id.us-east-1-0.aws.cloud.qdrant.io:6333
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=corpus_default

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256

# Embedding Configuration
EMBEDDING_MODEL=all-mpnet-base-v2
EMBED_DIM=768
EMBEDDING_PROVIDER=local

# Upload Configuration
MAX_UPLOAD_MB=20
STORAGE_PATH=./uploads

# Search Configuration
TOPK_VEC=20
TOPK_LEX=20
FUSE_SEM_WEIGHT=0.6
FUSE_LEX_WEIGHT=0.4

# Authentication Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_QPS=20
RATE_LIMIT_BURST=25
